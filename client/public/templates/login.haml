%form.bp{:action => "#{services[:login][:url]}", :method => 'post'}
  %fieldset
    %legend Please authenticate yourself before proceed
    .row
      %label{:for => 'user[email]'} Email
      %input.required.email{:type => 'text', :name => 'user[email]', :id => 'user[email]'}
    .row
      %label{:for => 'user[password]'} Password
      %input.required{:type => 'password', :name => 'user[password]', :id => 'user[password]', :minlength => 8}
    .row.actions
      %button.button.positive{:type => 'submit'} Log me in
      
